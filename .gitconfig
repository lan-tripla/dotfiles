[alias]
  a = add
  b = branch
  br = branch
  c = commit
  ca = commit --amend
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  d = diff
  dc = diff --cached
  g = grep
  l = log -10 --date=relative --pretty=format:'%Cred%h%Creset %s %Cgreen(%an, %ad)%Creset'
  ll = log --date=relative --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%an, %ad)%Creset'
  p = push
  pf = push -f
  r = remote
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbi10 = rebase --interactive HEAD~10
  rbi20 = rebase --interactive HEAD~20
  rbs = rebase --skip
  ru = remote update
  sh = show
  s = status -sb
  st = status

[branch]
  # set up git pull to do a rebase instead of merge
  autosetuprebase = always

[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto

[core]
  # For dealing with Windows projects
  autocrlf = false

  # Global gitignore
  excludesfile = ~/.gitignoreglobal

[diff]
  # Detect renames of files
  renames = true

[grep]
  lineNumber = true
  extendedRegexp = true

[merge]
  tool = vimdiff

[push]
  # Push current branch even if you've never pushed it before
  default = current

[user]
  # The name and e-mail address will be used to identify you in the commits
  name = "Paweł Gościcki"
  email = pawel.goscicki@gmail.com
