[alias]
  a = add
  b = branch
  br = branch
  c = commit
  ci = commit
  co = checkout
  d = diff
  dc = diff --cached
  g = grep
  l = log -10 --date=relative --pretty=format:'%C(yellow)%h %Creset%ad %an: %s'
  ll = log --date=relative --graph --pretty=format:'%C(yellow)%h%d %Creset%ad %an: %s'
  r = remote
  ru = remote update
  sh = show
  s = status
  st = status

[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto

[core]
  # For dealing with Windows projects
  autocrlf = false

  # Global gitignore
  excludesfile = ~/.gitignoreglobal

[diff]
  # Detect renames of files
  renames = true

[grep]
  lineNumber = true
  extendedRegexp = true

[merge]
  tool = vimdiff

[user]
  # The name and e-mail address will be used to identify you in the commits
  name = "Paweł Gościcki"
  email = pawel.goscicki@gmail.com

[push]
  # Push current branch even if you've never pushed it before
  default = current
